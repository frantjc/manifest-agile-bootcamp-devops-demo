pipeline {
    agent ANY

    tools {
        maven 'Maven 3.6.3'
    }

    stages {
        stage('build') {
            steps {
                sh 'mvn install'
            }
        }

        stage('test') {
            steps {
                sh 'mvn test'
                junit 'build/reports/junit.xml'
            }
        }

        stage('sonar') {
            steps {
                sh 'mvn clean sonar:sonar'
            }
        }

        stage('nexus') {
            steps {
                sh 'mvn deploy'
            }
        }
    }              
}
